{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "lib": [
            "ES2021"
        ],
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@aquita/types": [
                "packages/types/src/index.ts"
            ],
            "@aquita/config": [
                "packages/config/src/index.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}